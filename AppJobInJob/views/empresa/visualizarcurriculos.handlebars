<script>

        function favoritarCurriculo(button) {
            button.classList.toggle('favoritado');
            if (button.classList.contains('favoritado')) {
                button.textContent = 'Desfavoritar';
            } else {
                button.textContent = 'Favoritar';
            }
        }

        function atualizarDropdownArea() {
            const categoria = document.getElementById('categoria').value;
            const areaDropdown = document.getElementById('area');
            const labelArea = document.getElementById('labelArea');

            if (categoria === 'area') {
                areaDropdown.style.display = 'block';
                labelArea.style.display = 'block';
            } else {
                areaDropdown.style.display = 'none';
                labelArea.style.display = 'none';
                filtrarCurriculos(); // Atualizar os currículos
            }
        }

        function favoritarCurriculo(button) {
            button.classList.toggle('favoritado');
            if (button.classList.contains('favoritado')) {
                button.textContent = 'Desfavoritar';
            } else {
                button.textContent = 'Favoritar';
            }
        }

        function filtrarCurriculos() {
            const categoria = document.getElementById('categoria').value;
            const curriculos = document.querySelectorAll('.curriculo');
            const areaSelecionada = document.getElementById('area').value;

            curriculos.forEach(curriculo => {
                const area = curriculo.getAttribute('data-area');
                const idade = parseInt(curriculo.getAttribute('data-idade'));
                const favoritado = curriculo.querySelector('.botao-favoritar').classList.contains('favoritado');

                // Exibir todos os currículos na categoria geral
                if (categoria === 'geral') {
                    curriculo.style.display = 'block';
                }
                // Filtrar currículos por área
                else if (categoria === 'area') {
                    if (areaSelecionada === 'todas' || area === areaSelecionada) {
                        curriculo.style.display = 'block';
                    } else {
                        curriculo.style.display = 'none';
                    }
                }
                // Filtrar currículos para menor aprendiz (menores de 18 anos)
                else if (categoria === 'menor-aprendiz') {
                    if (idade < 18) {
                        curriculo.style.display = 'block';
                    } else {
                        curriculo.style.display = 'none';
                    }
                }
                // Filtrar currículos favoritados
                else if (categoria === 'favoritos') {
                    if (favoritado) {
                        curriculo.style.display = 'block';
                    } else {
                        curriculo.style.display = 'none';
                    }
                }
            });
        }
