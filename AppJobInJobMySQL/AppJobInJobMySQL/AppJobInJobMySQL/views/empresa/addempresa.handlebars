        };

        function preencherEstados() {
            for (var estado in estadosECidades) {
                var option = document.createElement("option");
                option.value = estado;
                option.textContent = estado;
                estadosSelect.appendChild(option);
            }
        }

        function preencherCidades(estadoSelecionado) {
            cidadesSelect.innerHTML = '<option value="">Cidade</option>'; 
            if (estadosECidades[estadoSelecionado]) {
                estadosECidades[estadoSelecionado].forEach(function(cidade) {
                    var option = document.createElement("option");
                    option.value = cidade;
                    option.textContent = cidade;
                    cidadesSelect.appendChild(option);
                });
            }
        }

        preencherEstados();

        estadosSelect.addEventListener("change", function() {
            var estadoSelecionado = this.value;
            preencherCidades(estadoSelecionado);
        });

    });
    function formatarCNPJInput(input) {
        // Remove qualquer caractere que não seja dígito
        let valor = input.value.replace(/\D/g, '');

        // Limita a 14 dígitos (número máximo de um CNPJ)
        if (valor.length > 14) {
            valor = valor.slice(0, 14);
        }

        // Formata a string para '00.000.000/0000-00'
        if (valor.length >= 14) {
            valor = valor.replace(/(\d{2})(\d{3})(\d{3})(\d{4})(\d{2})/, '$1.$2.$3/$4-$5');
        } else if (valor.length >= 12) {
            valor = valor.replace(/(\d{2})(\d{3})(\d{3})(\d{0,4})/, '$1.$2.$3/$4');
        } else if (valor.length >= 10) {
            valor = valor.replace(/(\d{2})(\d{3})(\d+)/, '$1.$2.$3');
        } else if (valor.length >= 2) {
            valor = valor.replace(/(\d{2})(\d+)/, '$1.$2');
        }

        // Define o valor formatado de volta no input
        input.value = valor;
    }



</script>