    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="/bootstrap-5.3.3-dist/js/bootstrap.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

</body>

</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #d9d9d9;
        overflow: hidden;
    }

    .box {
        display: flex;
        width: 90%;
        max-width: 1200px;
        background-color: #1c3659;
        border-radius: 30px;
        overflow: hidden;
        height: 80vh;
        margin: 0 auto;
    }

    .free-counter {
        width: 100px;
        height: 52px;
    }

    .empresa {
        padding: 10px 20px;
        background-color: #e3e6e9;
        color: #1c3659;
        font-size: 15px;
        font-weight: bold;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .box .candidato:hover,
    .box .empresa:hover {
        background-color: #628f9e;
        color: #ffffff;
    }

    .candidato {
        padding: 10px 20px;
        background-color: #e3e6e9;
        color: #1c3659;
        font-size: 15px;
        font-weight: bold;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
    }


    .box .tela-de-inicio {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
    }


    .box .image {
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        mix-blend-mode: darken;
        position: absolute;
        object-fit: cover;
    }


    .box .escolha {
        position: absolute;
        top: 65%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-family: "Arial-Bold", Helvetica;
        font-weight: 400px;
        color: #ffffff;
        font-size: 2.7vw;
        text-align: center;
        letter-spacing: -0.41px;
        white-space: nowrap;
    }

    .box .candidato,
    .box .empresa {
        font-weight: 700;
        color: #1c3659;
        font-size: 1.7vw;
        text-align: center;
        width: 15vw;
        background-color: #e3e6e9;
        border-radius: 30px;
        position: absolute;
        top: 80%;
        transform: translate(-50%, -50%);
    }


    .box .candidato {
        left: 60%;
    }

    .box .empresa {
        left: 40%;
    }

    .box .unifil {
        width: 5vw;
        height: auto;
        top: 13%;
        left: 12%;
        position: absolute;
        object-fit: cover;
    }


    .box .logo {
        position: absolute;
        width: 30%;
        height: auto;
        max-width: 300px;
        max-height: 300px;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
        object-fit: contain;
    }

    nav {
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        flex-wrap: wrap;
        width: 100%;
        position: absolute;
        top: 0; 
    }

    .nav-item {
        display: flex; 
        align-items: center;
        color: black;
        text-decoration: none;
        margin: 0 15px;
        transition: color 0.3s;
    }

    .nav-item img {
        width: 50px;
    }

    .nav-item a:hover {
        color: #8998ac;
    }
    
    @media (min-width: 1600px) {
        .box {
            width: 70vw;
            height: 70vh;
        }
        .candidato, .empresa {
            font-size: 1.5vw;
        }
    }
</style>

<script>
    async function fetchVisitorCount() {
        try {
            const response = await fetch("/visitor-count");
            const data = await response.json();
            document.getElementById("visitor-counter").textContent = `: ${data.count}`;
        } catch (error) {
            console.error("Erro ao buscar contador de visitantes:", error);
            document.getElementById("visitor-counter").textContent = "Erro ao carregar.";
        }
    }

    fetchVisitorCount();

    async function addVisitor() {
        try {
            const response = await axios.post('/add-visitor');
            console.log(response.data.message);
        } catch (error) {
            console.error("Erro ao registrar visitante:", error);
        }
    }

    window.onload = addVisitor;

</script>