<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job In Job - Cadastro</title>
    <link rel="stylesheet" href="/bootstrap-5.3.3-dist/css/bootstrap.css">
</head>

<body>

    <div class="box">
        <div class="group">
            <div class="lado-esquerdo">
                <img src="/img/logo.jpg" alt="Logo">
                <div class="possuicadastro">Já possui cadastro?</div>
                <button type="button" class="acesse" onclick="window.location.href='/candidato/login';">Acessar</button>
            </div>

            <div class="overlap">
                <form action="/candidato/cadastro/adicionar" method="POST" class="formulario">
                    <h1 class="cadastro">CADASTRO</h1>
                    <div class="card-body">
                        <label for="nome">Nome</label>
                        <input type="text" id="nome" name="nome" placeholder="Digite o seu nome completo" class="form-control" required>

                        <label for="cpf">CPF</label>
                        <input type="text" id="cpf" name="cpf" placeholder="xxx.xxx.xxx-xx" class="form-control" oninput="formatarCpfInput(this)" maxlength="14" required>

                        <label for="datanascimento">Data de nascimento</label>
                        <input type="text" id="datanascimento" name="dataNascimento" class="form-control" placeholder="dd/mm/yyyy" oninput="formatarDataInput(this)" required>

                        <label for="genero">Gênero:</label>
                        <select id="genero" name="genero" required>
                        <option value="">Selecione</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Feminino">Feminino</option>
                        <option value="Outro">Outro</option>
                        </select>

                        <label for="telefone">Telefone</label>
                        <input type="tel" id="telefone" name="telefone" placeholder="(xx) xxxxx-xxxx" class="form-control" oninput="formatarTelefoneInput(this)" maxlength="15" required>

                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email" placeholder="Digite seu e-mail" class="form-control" required>

                        <label for="senha">Senha</label>
                        <input type="password" id="senha" name="senha" placeholder="Crie uma senha" class="form-control" required>
                        <div class="checkbox-container">
                            <input type="checkbox" id="mostrar-senha" onclick="togglePassword()">
                            <label for="mostrar-senha">Mostrar senha</label>
                        </div>

                        <br>
                        <button type="submit" class="btn btn-success">Criar Conta!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>

</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #d9d9d9;
        overflow: hidden;
    }

    .box {
        display: flex;
        width: 90%;
        max-width: 1200px;
        background-color: #1c3659;
        border-radius: 30px;
        overflow: hidden;
        height: 90vh;
        margin: 0 auto;
    }

    .group {
        display: flex;
        width: 100%;
        height: 100%;
    }

    .lado-esquerdo {
        flex: 1;
        padding: 20px;
        background-color: #1c3659;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: #fff;
    }

    .lado-esquerdo img {
        width: 60%;
        max-width: 250px;
        height: auto;
        margin-bottom: 20px;
    }

    .possuicadastro {
        font-size: 24px;
        text-align: center;
        margin-bottom: 20px;
    }

    .acesse {
        padding: 10px 20px;
        background-color: #e3e6e9;
        color: #1c3659;
        font-size: 20px;
        font-weight: bold;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .acesse:hover {
        background-color: #628f9e;
        color: #ffffff;
    }

    .overlap {
        flex: 2;
        background-color: white;
        padding: 10px;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
    }

    .formulario {
        font-size: 10px;
        width: 90%;
        max-width: 400px;
        height: 100%;
        max-height: -50px;
        margin-top: 10px;
        margin-bottom: 3px;
    }

    .form-control {
        display: block;
        width: 100%;
        height: 33px;
    }

    .cadastro {
        color: #1c3659;
        font-size: 25px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 5px;
    }

    input, select, .btn {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        margin-top: 0px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

    .btn {
        background-color: #1c3659;
        color: white;
        cursor: pointer;
        font-size: 18px;
        font-weight: bold;
        padding: 15px;
    }

    .checkbox-container {
        display: flex;
        align-items: center;
        margin-top: 10px;
        margin-bottom: 20px;
    }

    input[type="checkbox"] {
        margin-right: 5px;
        width: 15px;
        height: 15px;
    }

    small {
        font-size: 9px;
    }

    @media (max-width: 768px) {
        .box {
            flex-direction: column;
            height: auto;
            width: 90%;
        }

        .lado-esquerdo {
            padding: 10px;
            justify-content: center;
        }

        .overlap {
            padding: 20px;
        }

        .lado-esquerdo img {
            max-width: 200px;
        }

        input,
        .btn {
            padding: 10px;
            font-size: 14px;
        }
    }
</style>

<script>
    function formatarDataInput(input) {
        // Remove qualquer caractere que não seja dígito
        let valor = input.value.replace(/\D/g, '');

        // Formata a string para 'dd/mm/yyyy'
        if (valor.length >= 2) {
            valor = valor.replace(/(\d{2})(\d+)/, '$1/$2');
        }
        if (valor.length >= 5) {
            valor = valor.replace(/(\d{2})\/(\d{2})(\d+)/, '$1/$2/$3');
        }

        // Define o valor formatado de volta no input
        input.value = valor;
    }

    function formatarCpfInput(input) {
        // Remove qualquer caractere que não seja dígito
        let valor = input.value.replace(/\D/g, '');

        // Formata a string para '000.000.000-00'
        if (valor.length > 11) {
            valor = valor.slice(0, 11); // Limita a 11 dígitos
        }
        if (valor.length >= 9) {
            valor = valor.replace(/(\d{3})(\d{3})(\d{3})(\d{0,2})/, '$1.$2.$3-$4');
        } else if (valor.length >= 6) {
            valor = valor.replace(/(\d{3})(\d{3})/, '$1.$2.');
        } else if (valor.length >= 3) {
            valor = valor.replace(/(\d{3})(\d+)/, '$1.$2');
        }

        // Define o valor formatado de volta no input
        input.value = valor;
    }

    function formatarTelefoneInput(input) {
        // Remove qualquer caractere que não seja dígito
        let valor = input.value.replace(/\D/g, '');

        // Formata a string para '(00) 00000-0000'
        if (valor.length > 11) {
            valor = valor.slice(0, 11); // Limita a 11 dígitos
        }
        
        if (valor.length >= 7) {
            valor = valor.replace(/(\d{2})(\d{5})(\d{0,4})/, '($1) $2-$3');
        } else if (valor.length >= 2) {
            valor = valor.replace(/(\d{2})(\d+)/, '($1) $2');
        }

        // Define o valor formatado de volta no input
        input.value = valor;
    }

    function togglePassword() {
        var passwordField = document.getElementById("senha");
        if (passwordField.type === "password") {
            passwordField.type = "text";
        } else {
            passwordField.type = "password";
        }
    }

    document.getElementById('dataNascimento').addEventListener('input', function(e) {
        let input = e.target.value;
            
            // Remover tudo que não for número
        input = input.replace(/\D/g, '');

            // Adiciona barras automaticamente
        if (input.length >= 2) input = input.slice(0, 2) + '/' + input.slice(2);
        if (input.length >= 5) input = input.slice(0, 5) + '/' + input.slice(5);

        e.target.value = input;
    });

    document.getElementById('dataNascimento').addEventListener('blur', function() {
        const input = this.value;
        const regex = /^(0[1-9]|[12][0-9]|3[01])\/(0[1-9]|1[0-2])\/\d{4}$/; // Formato dd/mm/yyyy
        const errorSpan = document.getElementById('dataError');

        if (!regex.test(input)) {
            errorSpan.textContent = "Data inválida. Use o formato dd/mm/yyyy.";
        } else {
            errorSpan.textContent = "";  // Limpa mensagem de erro
        }
    });
</script>